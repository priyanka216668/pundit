<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Status</th>
      <th>Created By</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%if policy(:welcome).show? %>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.content %></td>
          <td><%= post.status %></td>
          <td><%= post.created_by %></td>
          <td><%= link_to 'Show', post if policy(post).show? %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
