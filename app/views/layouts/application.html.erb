<!DOCTYPE html>
<html>
  <head>
    <title>Pundit</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= current_user.email %>
      <%= link_to " exit", destroy_user_session_path, method: :delete%><br />
    <% else %>
      <%= link_to "Sign in", new_user_session_path %><br />
    <% end %>
    <%= yield %>
  </body>
</html>
